    <SolidColorBrush x:Key="CARDForecastTextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CARDForecastTextSecondaryColor" Color="#B3E5FC"/>
    <SolidColorBrush x:Key="CARDForecastTextThridColor" Color="#757575"/>

    <BitmapImage x:Key="IconAddButton" UriSource="/WeatherWidget2;component/Icons/AddIcon.png"/>
    <BitmapImage x:Key="IconVisibleButtonVisible" UriSource="/WeatherWidget2;component/Icons/VisibleIcon.png"/>
    <BitmapImage x:Key="IconVisibleButtonHiden" UriSource="/WeatherWidget2;component/Icons/HiddenIcon.png"/>
    <BitmapImage x:Key="IconRemoveButton" UriSource="/WeatherWidget2;component/Icons/RemoveIcon.png"/>
